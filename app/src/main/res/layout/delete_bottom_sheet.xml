<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/Bottom_Sheet_Linear_Layout"
    android:layout_height="wrap_content">

    <View
        android:layout_width="100dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/delete_indicator_shape"
        android:layout_height="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/worried"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:fontFamily="@font/robotoslabregular"
        android:text="Are you sure want to delete\n this note?"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="No"
        android:padding="7dp"
        android:clickable="true"
        android:fontFamily="@font/robotoslabregular"
        android:id="@+id/Bottom_Sheet_No"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:textSize="18sp"
        android:background="@drawable/bottom_sheet_delete_no"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Yes"
        android:clickable="true"
        android:id="@+id/Bottom_Sheet_Yes"
        android:padding="7dp"
        android:fontFamily="@font/robotoslabregular"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/bottom_sheet_delete_yes"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
</LinearLayout>